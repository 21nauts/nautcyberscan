# Database Configuration
DATABASE_URL=postgres://nautscanner:nautscanner@localhost:5433/nautscanner?sslmode=disable

# Server Configuration
SERVER_PORT=8080
ENVIRONMENT=development

# Note: Docker Compose uses these external ports:
# - Backend API: localhost:8081 (maps to container 8080)
# - Frontend: localhost:3000
# - PostgreSQL: localhost:5433 (maps to container 5432)

# Security
JWT_SECRET=change-me-in-production-use-strong-random-string

# GitHub Integration (Optional)
GITHUB_APP_ID=
GITHUB_APP_SECRET=

# Notification Services (Optional)
# Email (SMTP)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# Slack
SLACK_WEBHOOK=

# Ntfy (Self-hosted notifications)
NTFY_URL=https://ntfy.sh

# Frontend Configuration
API_URL=http://localhost:8080
